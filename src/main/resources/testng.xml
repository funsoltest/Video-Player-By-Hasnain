<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Full Regression of Vidfo Player" verbose="1">

    <!-- Global Listeners for all tests -->
    <listeners>
        <listener class-name="ResultListener"/>
    </listeners>

    <listeners>
        <listener class-name="ScreenShotListener"/>
    </listeners>


    <!-- Debug Tests  Yeh Smoke Test Kay Liay-> Dirf Aik Method Ko Jab Run Karna Ho-->
    <test name="Debug Ads Test" preserve-order="true">
        <classes>
            <class name="DebugAdsTestCase">
                <methods>
                    <include name="SplashToHome"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Permission Tests -->
    <test name="Permission Tests" preserve-order="true">
        <classes>
            <class name="PermissionCheck"/>
            <class name="PermissionTestCase"/>
        </classes>
    </test>

    <!-- Release Tests -->
    <test name="Release Ads Tests" preserve-order="true">
        <classes>
            <class name="ReleaseTestAdsCases"/>
        </classes>
    </test>

